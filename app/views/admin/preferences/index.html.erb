<h1>Preferences</h1>
<%= form_for ([:admin, @preference]) do |f| %>
<%#= form_for @preference, url: admin_preference_path(@preference) do |f| %>
    <%= f.label :artist_sort_order, "Sort artists" %> <br>
    <%= f.radio_button :artist_sort_order, "ASC" %> A-Z  <br>
    <%= f.radio_button :artist_sort_order, "DESC" %> Z-A <br> <br>

    <%= f.label :song_sort_order, "Sort songs" %> <br>
    <%= f.radio_button :song_sort_order, "ASC" %> A-Z <br>
    <%= f.radio_button :song_sort_order, "DESC" %> Z-A <br> <br>

    <%= f.label :allow_create_artists, "Allow users to create new artists?" %> <br>
    <%= f.radio_button :allow_create_artists, true  %> Yes <br>
    <%= f.radio_button :allow_create_artists, false  %> No <br> <br>

    <%= f.label :allow_create_artists, "Allow users to create new songs?" %> <br>
    <%= f.radio_button :allow_create_songs, true  %> Yes <br>
    <%= f.radio_button :allow_create_songs, false  %> No <br> <br>

    <%= f.submit %>
<% end %>